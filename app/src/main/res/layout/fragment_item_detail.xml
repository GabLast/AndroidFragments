<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
            android:layout_width="0dp"
            android:layout_height="98dp" android:id="@+id/textviewDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="19dp" android:id="@+id/textviewInternalCode"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textviewDetails" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/labelInternalCode"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="19dp" android:id="@+id/textviewVersion"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textviewInternalCode"
            app:layout_constraintStart_toEndOf="@+id/textView6"/>
    <DatePicker
            android:id="@+id/datePickerReleaseDate"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textviewVersion" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/textView"/>
    <TextView
            android:text="@string/releaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textviewVersion"/>
    <TextView
            android:text="@string/internalCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/labelInternalCode"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textviewDetails"/>
    <TextView
            android:text="@string/version"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/labelInternalCode"/>
    <TextView
            android:text="@string/supported"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/datePickerReleaseDate"/>
    <TextView
            android:text="@string/lvl"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/checkboxSupp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="21dp" android:id="@+id/textFieldLvl"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/checkboxSupp"
            android:layout_marginStart="64dp" app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <CheckBox
            android:text="CheckBox"
            android:layout_width="0dp"
            android:layout_height="48dp" android:id="@+id/checkboxSupp"
            android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/datePickerReleaseDate"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/link"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/linkBTN"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textFieldLvl"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>